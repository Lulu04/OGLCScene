begin
  Result := 'BGRA('+aColor.red.ToString+','+aColor.green.ToString+','+aColor.blue.ToString;
  if aColor.alpha <> 255 then Result := Result + ','+aColor.alpha.ToString;
  Result := Result + ')';
end;

